block content
  div.model#save-dialog(style="display:none")
    div.modal-blocker
    div(style="position:absolute; padding:120px; top:0px; bottom:0px; left:0px; right:0px;")
      div.modal-content(style="margin-top:80px; width:540px;")
        div.modal-header
          span.close#save-close(onclick="$(this).Close('#save-dialog');") &times;
          h2 Save Safe
        div.modal-body(style="background: white; height:140px;")
          div(style="width: 50%; display:inline-block; padding:20px;")
            label.modal-label#save-connect-label(for="title" style="margin-left:-20px; margin-top:10px;") <b><i>Enter</i></b> the Passphrase for the Safe
            input.modal-entry#save-password(style="width:254px;" type="password" name="phrase" placeholder="password..." required)
          div#save-error(style="position:absolute; left:20px; bottom:50px;")
            p#save-message(style="color:red; font-size: 12px; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;") &nbsp;

          div(style="position:absolute; bottom:0px; padding:10px;")
              button.modal-btn#save-safe Save  
              button.modal-cancel-btn#cancel-save(onclick="$(this).Close('#save-dialog');") Cancel
          div.imageFrame(style="position:absolute; margin-left:20px; margin-right:10px; width:60px; height:60px; top:50px; right:0px; padding:20px; nopacity:0.7; border: 1px solid rgba(0, 0, 0, 0.0)")
            img(src="assets/images/download.svg" style="width:100%; height:100%;" alt="Password Image")